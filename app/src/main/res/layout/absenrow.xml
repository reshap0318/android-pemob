<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:padding="8dp"
    android:id="@+id/rowcontain">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/img_load"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:padding="3dp"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/bulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agustus"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/absen_background"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reinaldo Shandev Pratama"
            android:textColor="#fff"
            android:textSize="34dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="12:08:59"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/jadwal"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:text="Absen Pagi"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>