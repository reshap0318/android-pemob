<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginTop="5dp">
    
    <LinearLayout
        android:background="@drawable/img_load"
        android:layout_width="140dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bulan"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agustus"/>
        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/tahun"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:background="@drawable/absen_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reinaldo Shandev Pratama"
            android:textStyle="bold"
            android:textSize="34sp"/>

        <TextView
            android:id="@+id/menit"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:08:59"
            android:textSize="25sp"
            android:paddingTop="6dp"/>
        <TextView
            android:id="@+id/jadwal"
            android:textColor="#fff"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absen Pagi"
            android:textSize="30sp"/>
    </LinearLayout>
</LinearLayout>